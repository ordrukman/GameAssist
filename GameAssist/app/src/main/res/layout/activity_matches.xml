<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:padding="10dp"
    tools:context=".ActivityMatches">

    <TextView
        android:id="@+id/txtMatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Matches:"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="italic|bold" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/matchesRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/resultsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchesRV"
        android:layout_marginTop="-80dp"
        android:backgroundTint="#7A001CFF"
        android:text="results"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resultsBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="75dp"
        android:text="You can go to reasults only if all the players played"
        android:textColor="#FD0000"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>